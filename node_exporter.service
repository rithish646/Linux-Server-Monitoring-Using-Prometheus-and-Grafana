[Unit]
Description=Prometheus Node Exporter
Wants=network-online.target
After=network-online.target

[Service]
User=node_exporter
Group=node_exporter
ExecStart=/opt/node_exporter/node_exporter --collector.textfile.directory=/var/lib/node_exporter/textfile_collector --web.listen-address=:9100
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
